@import "super/i-block/i-block.styl"
@import "traits/i-visible/i-visible.styl"

$p = {
	visibleHelpers: true
}

b-image-editor extends i-block
	i-visible({helpers: $p.visibleHelpers})

	&__root-wrapper
		display flex
		justify-content center
		align-items center

	&__super-wrapper
		position relative
		display inline-block

	&__img
		min-width 10em
		min-height @min-width

	&__wrapper
		absolute top 0 left 0
		zIndex(layer, 1)
		display none
		size 100%

	&__info-cell
		align-self center

	&__progress
		display inline-block

	&_progress_true &__super-wrapper
		display block

	&_progress_true &__wrapper
		display flex
		justify-content center
		flex-direction column

	&_progress_true &__wrapper + &__controls
		display none

	&__controls
		absolute bottom 0 right 0
		zIndex(layer, 2)
		display flex
		justify-content flex-end

	&__control
		cursor pointer
