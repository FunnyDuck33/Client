@import "global/g-def/funcs.styl"
@import "global/g-def/consts.styl"

$p = {
	helpers: false
	sizes: setSizes({table: SIZES, units: 'rem'}, 'global')
}

i-size
	if $p.helpers && $p.sizes
		&_size
			for $key, $value in $p.sizes.table
				&_{$key}
					font-size unit($value, $p.sizes.units)
